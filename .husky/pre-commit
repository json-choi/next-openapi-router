#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Type check
echo "⚡ Running TypeScript type check..."
pnpm run type-check

# Linting
echo "🔧 Running ESLint..."
pnpm run lint

# Format check
echo "💅 Checking code formatting..."
pnpm run format:check

# Tests
echo "🧪 Running tests..."
pnpm run test

echo "✅ Pre-commit checks passed!"
