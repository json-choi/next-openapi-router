{
  "type": "module",
  "name": "next-router",
  "version": "0.0.0",
  "description": "Spring Framework-style route wrapper for Next.js 15 App Router with comprehensive type safety and authentication support",
  "keywords": [
    "nextjs",
    "routing",
    "typescript",
    "authentication",
    "validation",
    "zod",
    "openapi",
    "spring"
  ],
  "author": "Json-choi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/json-choi/next-router.git"
  },
  "bugs": {
    "url": "https://github.com/json-choi/next-router/issues"
  },
  "homepage": "https://github.com/json-choi/next-router#readme",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "zod": ">=3.0.0 <4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.8.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.0.11",
    "next": "^15.0.3",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.23.3"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test && pnpm run lint"
  }
}
